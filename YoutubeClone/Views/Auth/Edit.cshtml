@model YoutubeClone.Models.View_Models.Profil

@{
    ViewBag.Title = YoutubeClone.Ressource.Utilisateur.TitleEdit;
}

<h2>@YoutubeClone.Ressource.Utilisateur.PageNameEdit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@YoutubeClone.Ressource.Utilisateur.ControllerName</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label(YoutubeClone.Ressource.Utilisateur.EmailConfirm, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VerifiedEmail, new { htmlAttributes = new { @class = "form-control", } })
                @Html.ValidationMessageFor(model => model.VerifiedEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label(YoutubeClone.Ressource.Utilisateur.NewPassword, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Password("HashPassword", "", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HashPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label(YoutubeClone.Ressource.Utilisateur.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Password("VerifiedPass", "", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.VerifiedPass, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label(YoutubeClone.Ressource.Utilisateur.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Password("OldPassConf", "", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessage("OldPassConf", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@YoutubeClone.Ressource.Utilisateur.ActionEdit" class="btn btn-default" />
                @Html.ActionLink(YoutubeClone.Ressource.Utilisateur.GoToDelete, "Delete", "Utilisateurs", new { id = ViewBag.userId }, new { @class = "btn btn-default" })
                @Html.ActionLink(YoutubeClone.Ressource.Utilisateur.Cancel, "InfoUser", "Auth", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>