
@{
    ViewBag.Title = "Youtube Clone - " + YoutubeClone.Ressource.Home.Title;
}

<h2>Home</h2>


<div class="row">
    <div class="col-md-3">
        @Html.Action("MenuCategories", "Home", null)
    </div>
    <div class="col-md-9 block-size">
        @if (User.Identity.IsAuthenticated) {
            @Html.Action("Recommended", "Recherche", null)
        } 
        @Html.Action("MostPopularVideos", "Videos", null)
        @Html.Action("MostPopularChannels", "Channel", null)
