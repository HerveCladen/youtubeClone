        </form>

        <ul>
            @if (User.Identity.IsAuthenticated)
            {

                <li>
                    @Html.ActionLink("Chaînes", "Index", "Home", new { Url = Request.Url.AbsolutePath }, null)
                </li>
                <li>
                    @Html.ActionLink("Modification", "Edit", "Utilisateur", new { Url = Request.Url.AbsolutePath }, null)
                </li>
