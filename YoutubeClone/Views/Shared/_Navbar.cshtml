        @Html.ActionLink("Youtube Clone", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

        <form method="get" action="/Recherche/Index" class="navbar-form">
            <div>
                <input type="text" name="search" value="" required>
                <input type="submit" value="Recherche" />
