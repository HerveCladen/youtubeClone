@model IEnumerable<YoutubeClone.Models.Data_Models.Video>

<div class="Recommended">
    <div class="row">
        <h1 class="col-md-12">Recommended Videos</h1>
    </div>
    <div id="targetElement" class="row">
        @if (ViewBag.HasHistorique) {
             if(ViewBag.MoreToSee){
                foreach (var item in Model) {
                <div style="background-color:darkgrey">
                    <div class="col-md-2 video">
                        @Html.Partial("~/Views/Shared/_VideoThumbnail.cshtml", item)
                    </div>
                </div>
                }
            }else{
                <p>You've seen everything we have to offer here, come back later!</p>
            }
        } else {
            <p>Start watching videos to see your recommended's list</p>
        }
    </div>
</div>
