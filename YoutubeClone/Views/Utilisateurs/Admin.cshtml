@{
    ViewBag.Title = YoutubeClone.Ressource.Utilisateur.TitleAdmin;
}

<h2>@YoutubeClone.Ressource.Utilisateur.PageNameAdmin</h2>

<h3>@YoutubeClone.Ressource.Utilisateur.AdminSectionVideo</h3>
<div class="row">
    @foreach (YoutubeClone.Models.Data_Models.Video v in ViewBag.Videos) {
    <div class="col-md-4">
        <p>@YoutubeClone.Ressource.Utilisateur.AdminSName @v.Name</p>
        <p>@YoutubeClone.Ressource.Utilisateur.AdminSDescription @v.Description</p>
        <p>@YoutubeClone.Ressource.Utilisateur.AdminSTags @v.Tags_Video</p>
        <a href="~/Videos/Details/@(v.VideoId)">
            <img src="~/Content/Thumbnails/@(v.VideoId).png" onerror="this.src='https://i.imgur.com/P5xGiIQ.jpg'" class="thumbnail-image" />
        </a>
        <a href="/Videos/Delete/@v.VideoId">@YoutubeClone.Ressource.Utilisateur.AdminSVD </a>
    </div>
    }
</div>
<h3>@YoutubeClone.Ressource.Utilisateur.AdminSectionChannel</h3>
<div class="row">
    @foreach (YoutubeClone.Models.Data_Models.Chaine v in ViewBag.Chaines) {
    <div class="col-md-4">
        <p>@YoutubeClone.Ressource.Utilisateur.AdminSName @v.Name</p>
        <p>@YoutubeClone.Ressource.Utilisateur.AdminSDescription @v.Description</p>
        <p>@YoutubeClone.Ressource.Utilisateur.AdminSTags @v.Tags_Chaine</p>
        <a href="~/Channel/Details/@(v.ChaineId)">@YoutubeClone.Ressource.Utilisateur.AdminSCView</a>
        <a href="/Channel/Delete/@v.ChaineId">@YoutubeClone.Ressource.Utilisateur.AdminSCD </a>
    </div>
    }
</div>

<h3>@YoutubeClone.Ressource.Utilisateur.AdminSectionUser</h3>
<div class="row">
    @foreach (YoutubeClone.Models.Data_Models.Utilisateur v in ViewBag.Utilisateurs) {
    <div class="col-md-4">
        <p>@YoutubeClone.Ressource.Utilisateur.AdminSName @v.Username</p>
        <a href="/Utilisateurs/Delete/@v.UtilisateurId">@YoutubeClone.Ressource.Utilisateur.AdminSUD </a>
    </div>
    }
</div>

