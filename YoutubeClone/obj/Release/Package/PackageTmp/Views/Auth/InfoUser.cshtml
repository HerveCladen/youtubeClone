@model YoutubeClone.Models.View_Models.Profil
@using YoutubeClone.Models.Data_Models

@{
    ViewBag.Title = YoutubeClone.Ressource.Utilisateur.TitleDetails;
}

<h2>@YoutubeClone.Ressource.Utilisateur.PageNameDetails @User.Identity.Name</h2>

<div>
    <h4>Information</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="control-label">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.Label(YoutubeClone.Ressource.Utilisateur.LabelChannel)
        </dt>

        <dd>
            |
            @{ foreach (Chaine c in ViewBag.chaine)
                {
                    <span>@Html.ActionLink(c.Name, "ChainesUtilisateurs", "Channel") | </span>
                }
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink(YoutubeClone.Ressource.Utilisateur.GoToEdit, "Edit", "Auth", null, new { @class = "btn btn-default" })
    @Html.ActionLink(YoutubeClone.Ressource.Utilisateur.GoToHome, "Index", "Home", null, new { @class = "btn btn-default" })
</p>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
