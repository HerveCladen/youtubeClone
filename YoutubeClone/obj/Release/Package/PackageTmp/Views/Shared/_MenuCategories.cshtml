@model IEnumerable<YoutubeClone.Models.Data_Models.Categorie>

<div class="MenuCategories">
    <div class="row">
        <h2 class="col-md-12">Video categories</h2>
    </div>

    <div class="categories">
        @foreach (var item in Model)
        {
            <div class="category">
                @Html.ActionLink((string)item.ToString(), "Index", "Recherche", new { categorie = item, isVideo = "on", isFromCat = true }, new { @class = "category-links" })
            </div>
        }
    </div>
    <div class="row">
        <h2 class="col-md-12">Channel categories</h2>
    </div>

    <div class="categories">
        @foreach (var item in Model) {
            <div class="category">
                <div class="col-md-12" style="padding-left:0">
                    @Html.ActionLink((string)item.ToString(), "Index", "Recherche", new { categorie = item, isChaine = "on", isFromCat = true }, new { @class = "category-links" })
                </div>
            </div>
        }
    </div>
</div>
